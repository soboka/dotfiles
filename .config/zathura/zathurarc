" Colors
set default-bg              "#2B3339"
set default-fg              "#D5C9AB"

set statusbar-bg            "#131a18"
set statusbar-fg            "#A7C080"

set inputbar-bg             "#131a18"
set inputbar-fg             "#A7C080"

set notification-error-bg   "#E69875"
set notification-error-fg   "#131a18"

set notification-warning-bg "#E69875"
set notification-warning-fg "#131a18"

set highlight-color         "#53697F"
set highlight-active-color  "#E69875"

set completion-highlight-fg "#A7C080"
set completion-highlight-bg "#131a18"

set completion-bg           "#131a18"
set completion-fg           "#A7C080"

set notification-bg         "#A7C080"
set notification-fg         "#131a18"

" Clipboard
set selection-clipboard clipboard

" Search
set incremental-search true
set search-hadjust true

" Autoadjust
set adjust-open width

" Typography
set font "Open Sans normal 12"

" Zoom in/out
map z zoom in
map Z zoom out

" Toggle mode
map D toggle_page_mode

" Scroll
map g scroll half-up
map G scroll half-down

map R rotate

" Fullscreen
map [normal]     F toggle_fullscreen
map [fullscreen] F toggle_fullscreen

" Reload
map [normal]     <C-r> reload
map [fullscreen] <C-r> reload

" vim: ft=vim
